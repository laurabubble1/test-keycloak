{
  "dashboard": {
    "id": null,
    "title": "Keycloak Performance Dashboard",
    "tags": ["keycloak", "performance"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=\"keycloak-builtin\"}[1m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Response Time (95th percentile)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{job=\"keycloak-builtin\"}[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "JVM Heap Usage %",
        "type": "stat",
        "targets": [
          {
            "expr": "(jvm_memory_used_bytes{job=\"keycloak-builtin\", area=\"heap\"} / jvm_memory_max_bytes{job=\"keycloak-builtin\", area=\"heap\"}) * 100",
            "legendFormat": "Heap Usage"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Threads",
        "type": "stat",
        "targets": [
          {
            "expr": "jvm_threads_live_threads{job=\"keycloak-builtin\"}",
            "legendFormat": "Threads"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 200}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP Request Rate Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=\"keycloak-builtin\"}[1m])",
            "legendFormat": "{{method}} {{uri}} ({{status}})"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "Response Time Percentiles",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_server_requests_seconds_bucket{job=\"keycloak-builtin\"}[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{job=\"keycloak-builtin\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket{job=\"keycloak-builtin\"}[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "title": "JVM Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=\"keycloak-builtin\", area=\"heap\"}",
            "legendFormat": "Heap Used"
          },
          {
            "expr": "jvm_memory_max_bytes{job=\"keycloak-builtin\", area=\"heap\"}",
            "legendFormat": "Heap Max"
          },
          {
            "expr": "jvm_memory_used_bytes{job=\"keycloak-builtin\", area=\"nonheap\"}",
            "legendFormat": "Non-Heap Used"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 8,
        "title": "HTTP Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=\"keycloak-builtin\", status=~\"4..|5..\"}[1m])",
            "legendFormat": "{{status}} errors"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      }
    ]
  }
}